<h1>New Adoption Application</h1>
<%= form_with url: '/applicants', local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Full Name" %>

  <p><%= f.label :street_address, "Street Address" %>
  <%= f.text_field :street_address %></p>

  <p><%= f.label :city %>
  <%= f.text_field :city %></p>

  <p><%= f.label :state %>
  <%= f.text_field :state %></p>

  <p><%= f.label :zip_code, "Zip Code" %>
  <%= f.text_field :zip_code %></p>

  <p><%= f.label :description %>
  <%= f.text_area :description, size: "25x3", placeholder: "Describe why you would make a good home to one of our pets!" %></p>

  <%= f.submit "Submit Application" %>
<% end %>
